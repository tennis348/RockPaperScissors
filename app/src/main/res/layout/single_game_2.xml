<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxWidth="300dp"
            android:minWidth="150dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/paper_hand" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxWidth="300dp"
            android:minWidth="150dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/rock_hand" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxWidth="300dp"
            android:minWidth="150dp"
            android:scaleX="-1"
            app:srcCompat="@drawable/scissor_hand" />

        <Button
            android:id="@+id/select_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#00897b"
            android:text="âœ”"
            android:textSize="28sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/previous_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/linearLayout2"
        android:minHeight="100dp"
        android:minWidth="120dp"
        android:scaleX="-1"
        android:scaleY="-1"
        app:srcCompat="@drawable/previous" />

    <TextView
        android:id="@+id/name_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previous_img"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/linear"
        android:fontFamily="casual"
        android:text="test"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>