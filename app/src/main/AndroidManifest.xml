<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.rockpaperscissors">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleGame1"
            android:label="SingleGame1"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SingleGame2"
            android:label="SingleGame2"
            android:parentActivityName=".SingleGame1"/>
        <activity android:name=".Validator"
            android:label="Validator"
            android:parentActivityName=".SingleGame2"/>
        <activity android:name=".AI"
            android:label="AI"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>